= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin mt-5 pt-2" }) do |f|
  %h3.mb-3.text-center Sign in
  .form-group
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"
  .form-group
    = f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password"
  - if devise_mapping.rememberable?
    .form-check.form-group
      = f.check_box :remember_me, class: "form-check-input"
      = f.label :remember_me, class: "form-check-label"
  .actions.form-group
    = f.submit "Sign in", class: "btn btn-primary btn-block"
  = render "devise/shared/links"