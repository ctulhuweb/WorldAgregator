.card.my-4
  .card-header.text-center
    = site.name
  %ul.list-group.list-group-flush
    %li.list-group-item
      = "Url: #{site.url}"
    %li.list-group-item
      .card-status.d-inline
        = "Status: #{site.active? ? 'Active' : 'Not active'}"
  .card-footer.text-center
    = form_with model: Site, url: change_status_site_path(site), method: :patch, class: "d-inline site-status-js" do |f|
      = f.submit "#{site.active? ? "Disable" : "Enable"}", class: "btn btn-#{site.active? ? "danger" : "success"}"
    .btn.btn-primary.ml-2.test-parse-js{data: { url: test_parse_site_path(site) }} 
      Test parse
