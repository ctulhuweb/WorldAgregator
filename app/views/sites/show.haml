.row
  .card.my-2
    .card-header
      = @site.name
    %ul.list-group
      %li.list-group-item
        = "Url: #{@site.url}"
      %li.list-group-item
        = "Status: #{@site.active? ? 'Active' : 'Not active'}"
.row
  %table.table
    %thead
      %tr
        %th
          Name
        %th
          Selector
        %th
          Actions
        %th
    %tbody
      - @site.parse_fields.each do |pf|
        %tr
          %td
            = pf.name
          %td
            = pf.selector
          %td
            = link_to "Edit", edit_site_parse_field_path(@site, pf), class: "btn btn-secondary"
          %td
            = link_to "Delete", site_parse_field_path(@site, pf), method: :delete, remote: true, class: "btn btn-danger delete-parse-field"

.row
  = link_to "Add Parse setting", new_site_parse_field_path(@site), class: "btn btn-primary"
  = link_to "Test parse",  test_parse_site_path(@site), class: "btn btn-primary ml-2 test-parse-js", method: :post, remote: :true 